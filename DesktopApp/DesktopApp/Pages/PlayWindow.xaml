                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <controls:ImageButton x:Name="BtnLeft"
                                              Visibility="Collapsed"
                                              NormalImage="/Images/Play/btn_jy_left_normal.png"
                                              HoverImage="/Images/Play/btn_jy_left_hover.png"
