                                            <TextBlock Margin="5,0,5,0" Foreground="{StaticResource CustomgPlayTimeBrush}" Text="时间选择" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                        <!--<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0,0,2" HorizontalAlignment="Left">
                            --><!--<Button x:Name="BtnTimeSelect" Click="BtnTimeSelect_Click" Height="15" Width="60"
                                FontSize="12" Cursor="Hand" Background="#004A96"
                                >
                                <Button.Template>
                                    <ControlTemplate>
