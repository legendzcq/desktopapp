                <ColumnDefinition x:Name="Col1" Width="2*"/>
                <ColumnDefinition x:Name="Col2" Width="Auto"/>
                <ColumnDefinition x:Name="Col3" Width="0*"/>
            </Grid.ColumnDefinitions>

            <!--播放器-->
            <Grid Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <WindowsFormsHost x:Name="WinHost" Grid.Row="1" Visibility="Visible"/>
                <Border Grid.Row="2" VerticalAlignment="Bottom" Height="70" Margin="-1,0,0,-2" Background="#232323">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Slider x:Name="SliderBar" Margin="5, 0" IsMoveToPointEnabled="True" IsSelectionRangeEnabled="True" SelectionStart="0" SelectionEnd="{Binding Value, ElementName=SliderBar}" VerticalAlignment="Top" Style="{DynamicResource SliderStyle1}" MouseDown="SliderBar_MouseDown"  MouseUp="SliderBar_MouseUp" GotMouseCapture="SliderBar_GotMouseCapture" LostMouseCapture="SliderBar_LostMouseCapture" />
