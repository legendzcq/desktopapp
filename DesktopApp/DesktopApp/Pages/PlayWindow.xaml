                                                  HoverImage="/Images/Play/sound_speed_hover.png"
                                                  PressedImage="/Images/Play/sound_speed_hover.png"
                                                  HorizontalAlignment="Left" Margin="120,0,0,0"
                                                  Click="btnSpeed_Click"
