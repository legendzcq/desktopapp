                            <TextBlock x:Name="TxtSpeed" Text="正常" Margin="15,0,0,0"/>
                        </controls:ImageButton>
                        <CheckBox Grid.Row="1" Height="15" Width="65" Foreground="{StaticResource CustomgPlayTimeBrush}" x:Name="ChkTopMost" Click="ChkTopMost_OnClick" Margin="180,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">置顶</CheckBox>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
                            <controls:ImageButton ImageHeight="16" ImageWidth="15"
                                                      NormalImage="/Images/Play/btn_left_normal.png"
                                                      HoverImage="/Images/Play/btn_left_hover.png"
                                                      PressedImage="/Images/Play/btn_left_hover.png"
                                                      Click="btnBack_Click"
                                                      ToolTip="上一讲"/>
                            <controls:ImageButton x:Name="BtnPlayPause" ImageHeight="30" ImageWidth="30"
                                NormalImage="/Images/Play/btn_pause_normal.png"
                                HoverImage="/Images/Play/btn_pause_hover.png"
                                PressedImage="/Images/Play/btn_pause_hover.png"
                                Margin="5,0,5,0"
                                Click="btnPlayPause_Click"/>
                            <controls:ImageButton ImageHeight="16" ImageWidth="15"
                                                      NormalImage="/Images/Play/btn_right_normal.png"
                                                      HoverImage="/Images/Play/btn_right_hover.png"
                                                      PressedImage="/Images/Play/btn_right_hover.png"
                                                      Click="btnForward_Click"
                                                      ToolTip="下一讲"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button x:Name="BtnPointTest" Click="BtnPointTest_Click" Visibility="Collapsed" Height="16" FontSize="12" Cursor="Hand" Background="#004A96">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{StaticResource CustomgPlayTimeBrush}" BorderThickness="0" CornerRadius="8">
                                            <TextBlock Margin="5,0,5,0" Foreground="{StaticResource CustomgPlayTimeBrush}" Text="知识点练习" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <controls:ImageButton ImageHeight="16" ImageWidth="51"
                                                  NormalImage="/Images/Play/btn_jy.png"
                                                  HoverImage="/Images/Play/btn_jy_hover.png"
                                                  PressedImage="/Images/Play/btn_jy_hover.png"
                                                  HorizontalAlignment="Right"
                                                  Click="BtnJy_OnMouseLeftButtonDown" Content="讲义" Foreground="{StaticResource CustomgPlayTimeBrush}"/>
                            <Image Source="/Images/Play/btn_sound_normal.png" Height="16"/>
                            <Slider Style="{StaticResource SliderStyle1}" Width="100" VerticalAlignment="Center"
                                Maximum="100" Minimum="0"
                                ValueChanged="BtnSound_OnValueChanged"
                                IsSelectionRangeEnabled="True"
                                SelectionStart="0"
                                SelectionEnd="{Binding Value, ElementName=SliderVol}"
                                IsMoveToPointEnabled="True" x:Name="SliderVol"/>
                        </StackPanel>
                        <controls:ImageButton VerticalAlignment="Center" Grid.Row="1" ImageHeight="16"
                            NormalImage="/Images/Play/btn_fullscreen_normal.png"
                            HoverImage="/Images/Play/btn_fullscreen_hover.png"
                            PressedImage="/Images/Play/btn_fullscreen_hover.png"
                            HorizontalAlignment="Right"
                            Margin="0,0,1,0" x:Name="BtnFullScreen" Click="BtnFullScreen_Click"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,150,2" HorizontalAlignment="Right">

                            <Button x:Name="btnAsk" Click="BtnAsk_Click"
                                    Visibility="Visible"
                                    Height="15"
                                    FontSize="12"
                                    Margin="0,0,5,0" Cursor="Hand" Background="#004A96">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{StaticResource CustomgPlayTimeBrush}" BorderThickness="0" CornerRadius="8">
                                            <TextBlock Margin="5,0,5,0" Foreground="{StaticResource CustomgPlayTimeBrush}" Text="提问" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
