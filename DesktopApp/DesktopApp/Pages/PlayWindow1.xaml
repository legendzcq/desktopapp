                                    SelectionStart="0"
                                    SelectionEnd="{Binding Value, ElementName=SliderVol}"
                                    IsMoveToPointEnabled="True"
                                    x:Name="SliderVol" />
                        </StackPanel>
                        <controls:ImageButton VerticalAlignment="Center"
                                              Grid.Row="1"
                                              ImageHeight="16"
                                              NormalImage="/Images/Play/btn_fullscreen_normal.png"
                                              HoverImage="/Images/Play/btn_fullscreen_hover.png"
                                              PressedImage="/Images/Play/btn_fullscreen_hover.png"
                                              HorizontalAlignment="Right"
                                              Margin="0,0,5,0"
                                              x:Name="BtnFullScreen"
                                              Click="BtnFullScreen_Click" />
                    </Grid>
                </Border>
            </Grid>
            <Border x:Name="GirdSplit"
                    Grid.Column="1"
                    Background="{StaticResource CustomPlaySplitBackgroundBrush}"
                    BorderThickness="0.5,0.5,0.5,1"
                    BorderBrush="#666666">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <controls:ImageButton x:Name="BtnLeft"
                                          Visibility="Collapsed"
                                          NormalImage="/Images/Play/btn_jy_left_normal.png"
                                          HoverImage="/Images/Play/btn_jy_left_hover.png"
                                          PressedImage="/Images/Play/btn_jy_left_press.png"
                                          ImageWidth="7"
                                          ImageHeight="12"
                                          Margin="2,0"
                                          Click="BtnLeft_OnClick" />
                    <controls:ImageButton  x:Name="BtnRight"
                                           Visibility="Collapsed"
                                           NormalImage="/Images/Play/btn_jy_right_normal.png"
                                           HoverImage="/Images/Play/btn_jy_right_hover.png"
                                           PressedImage="/Images/Play/btn_jy_right_press.png"
                                           ImageWidth="7"
                                           ImageHeight="12"
                                           Margin="2,0"
                                           Click="BtnRight_OnClick" />
                </StackPanel>
            </Border>
            <!--讲义-->
            <Border Grid.Column="2"
                    BorderBrush="#666"
                    BorderThickness="0,0,1,1">
                <Grid x:Name="GridJy">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            Height="40"
                            Background="#F5B21C"
                            BorderThickness="0">
                        <Grid>
                            <Image Source="/Images/Play/jy_tab.png"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0" />
                            <TextBlock Text="同步讲义"
                                       VerticalAlignment="Center"
                                       Margin="30,-3,0,0"
                                       Foreground="#AB1700"
                                       FontWeight="Bold" />
                            <ComboBox VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,10,0"
                                      x:Name="SelectFont"
                                      SelectionChanged="SelectFont_SelectionChanged">
                                <ComboBoxItem Content="较小"
                                              FontSize="12" />
                                <ComboBoxItem Content="正常"
                                              FontSize="14"
                                              IsSelected="True" />
                                <ComboBoxItem Content="较大"
                                              FontSize="16" />
                                <ComboBoxItem Content="特大"
                                              FontSize="18" />
                            </ComboBox>
                            <TextBlock Text="字体:"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,70,0" />
                        </Grid>
                    </Border>
                    <WindowsFormsHost Grid.Row="1">
                        <win:WebBrowser x:Name="WebMain"
                                        Dock="Fill"
                                        IsWebBrowserContextMenuEnabled="True"
                                        WebBrowserShortcutsEnabled="False" />
                    </WindowsFormsHost>
                    <!--<WebBrowser Grid.Row="1" x:Name="_webMain"/>-->
                </Grid>
            </Border>
        </Grid>

        <!--Window Resize-->
        <Rectangle Name="left"
                   Margin="0,0,-5,0"
                   Width="5"
                   Grid.Column="0"
                   Grid.Row="1"
                   Grid.RowSpan="3"
                   Fill="Transparent"></Rectangle>
        <Rectangle Name="right"
                   Margin="-5,0,0,0"
                   Width="5"
                   Grid.Column="2"
                   Grid.Row="1"
                   Grid.RowSpan="3"
                   Fill="Transparent"></Rectangle>
        <Rectangle Name="top"
                   Height="5"
                   Grid.Column="1"
                   Grid.Row="0"
                   VerticalAlignment="Top"
                   Fill="Transparent"></Rectangle>
        <Rectangle Name="bottom"
                   Margin="0,-5,0,0"
                   Height="5"
                   Grid.Column="1"
                   Grid.Row="4"
                   Fill="Transparent"></Rectangle>

        <Border Name="leftTop"
                Margin="0,0,-5,-5"
                Width="5"
                Height="5"
                Grid.Column="0"
                Grid.Row="0"
                Background="Transparent"></Border>
        <Border Name="rightTop"
                Margin="-5,0,0,-5"
                Width="5"
                Height="5"
                Grid.Column="2"
                Grid.Row="0"
                Background="Transparent"></Border>
        <Border Name="leftBottom"
                Margin="0,-5,-5,0"
                Width="5"
                Height="5"
                Grid.Column="0"
                Grid.Row="4"
                Background="Transparent"></Border>
        <Border Name="rightBottom"
                Margin="-5,-5,0,0"
                Width="5"
                Height="5"
                Grid.Column="2"
                Grid.Row="4"
                Background="Transparent"></Border>
    </Grid>
</Window>
