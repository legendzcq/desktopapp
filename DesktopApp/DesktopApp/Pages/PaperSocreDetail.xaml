      xmlns:converters="clr-namespace:DesktopApp.Converters"
      mc:Ignorable="d" 
      FontFamily="{StaticResource BaseFont}"
      d:DesignHeight="300" d:DesignWidth="700"
      DataContext="{Binding Source={StaticResource Locator},Path=PaperScoreView}">
